{
  "$schema": "http://localhost:3000/schemas/v1.json",
  "name": "cards-root",
  "namespace": "edge-dxp-comp-lib",
  "description": "Displays child assets from a selected Matrix node as a grid of cards.",
  "displayName": "Cards - Matrix Root Node",
  "version": "1.2.0",
  "type": "edge",
  "mainFunction": "main",
  "icon": {
    "id": "grid_view",
    "color": {
      "type": "enum",
      "value": "gray"
    }
  },
  "environment": [
    {
      "name": "API_IDENTIFIER",
      "required": false
    },
    {
      "name": "BASE_DOMAIN",
      "required": false
    },
    {
      "name": "BASE_PATH",
      "required": false
    }
  ],
  "functions": [
    {
      "name": "main",
      "entry": "main.js",
      "input": {
        "type": "object",
        "required": [
          "rootnode"
        ],
        "properties": {
          "title": {
            "type": "string",
            "title": "Title",
            "description": "The title displayed above the cards."
          },
          "link": {
            "type": "SquizLink",
            "title": "Link",
            "description": "A link displayed next to the title."
          },
          "rootnode": {
            "type": "string",
            "title": "Cards",
            "format": "matrix-asset-uri",
            "description": "Select a Matrix node to display its child pages as cards."
          }
        }
      },
      "output": {
        "responseType": "html"
      }
    }
  ],
  "staticFiles": {
    "locationRoot": "./"
  },
  "previews": {
    "default": {
      "functionData": {
        "main": {
          "inputData": {
            "type": "file",
            "path": "example.data.json"
          },
          "wrapper": {
            "path": "preview.html"
          }
        }
      }
    }
  }
}